# StoryForge AI Environment Variables
# Copy this file to .env.local and fill in your actual values

# Server Configuration
SERVER_PORT=8082

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/storyforge
MONGODB_DB=storyforge
MONGODB_HOST=localhost
MONGODB_PORT=27017

# NextAuth Configuration
# Generate a secret: openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# OAuth Providers (optional)
# Google OAuth - https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth - https://github.com/settings/developers
GITHUB_ID=
GITHUB_SECRET=

# AI Service Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ElevenLabs TTS Configuration
# Get your API key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Image Service Configuration (ImageKit)
# Get your keys from: https://imagekit.io/dashboard/developer/api-keys
NEXT_PUBLIC_IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key_here
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key_here
NEXT_PUBLIC_IMAGEKIT_URL_ENDPOINT=your_imagekit_endpoint_here

# Environment
NODE_ENV=development

# Optional: Enable debug logging
DEBUG=storyforge:*